{
	"name": "soferai-yutorah-transcriber",
	"private": true,
	"version": "1.0.8",
	"scripts": {
		"clean": "rm -rf dist",
		"build": "pnpm run clean && node build.js"
	},
	"browserslist": [
		"last 1 Chrome version",
		"last 1 Firefox version"
	],
	"xo": {
		"envs": [
			"browser",
			"webextensions"
		],
		"rules": {
			"unicorn/prefer-top-level-await": "off"
		}
	},
	"dependencies": {
		"webext-base-css": "^2.0.1",
		"webext-options-sync": "^4.2.3"
	},
	"devDependencies": {
		"@parcel/config-default": "^2.13.0",
		"@parcel/transformer-js": "^2.13.0",
		"@parcel/transformer-webextension": "^2.13.0",
		"@parcel/packager-webextension": "^2.13.0",
		"parcel": "^2.13.0"
	},
	"@parcel/resolver-default": {
		"packageExports": true
	},
	"targets": {
		"webext": {
			"source": "src/manifest.json",
			"distDir": "build",
			"context": "browser",
			"includeNodeModules": true
		}
	}
}