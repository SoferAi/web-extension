{
	"$schema": "https://json.schemastore.org/chrome-manifest",
	"name": "SoferAI YUTorah Transcriber",
	"version": "1.0.8",
	"description": "Transcribe YUTorah lectures with SoferAI",
	"homepage_url": "https://github.com/SoferAi/web-extension",
	"manifest_version": 3,
	"minimum_chrome_version": "121",
	"browser_specific_settings": {
		"gecko": {
			"id": "matanya@sofer.ai",
			"strict_min_version": "121.0"
		}
	},
	"icons": {
		"128": "icon.png"
	},
	"permissions": [
		"cookies",
		"storage"
	],
	"host_permissions": [
		"*://*.sofer.ai/*",
		"http://localhost:3000/*",
		"https://*.yutorah.org/*",
		"https://download.yutorah.org/*"
	],
	"content_scripts": [
		{
			"matches": [
				"https://*.yutorah.org/*"
			],
			"js": [
				"content.js"
			],
			"css": [
				"styles.css"
			]
		}
	],
	"web_accessible_resources": [
		{
			"resources": [
				"icon.png"
			],
			"matches": [
				"https://*.yutorah.org/*"
			]
		}
	],
	"background": {
		"service_worker": "background.js"
	},
	"action": {
		"default_popup": "popup.html",
		"default_icon": "icon.png"
	}
}